{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Start Backend Dev Server",
        "type": "shell",
        "command": "npm",
        "args": ["run", "dev"],
        "options": {
            "cwd": "${workspaceFolder}/backend"
        },
        "group": "build",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "new",
            "showReuseMessage": true,
            "clear": false
        },
        "problemMatcher": []
        },
        {
        "label": "Start Frontend Expo Server",
        "type": "shell",
        "command": "npx",
        "args": ["expo", "start"],
        "options": {
        "cwd": "${workspaceFolder}/frontend"
        },
        "group": "build",
        "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
        },
        "problemMatcher": []
        }
    ]
}