# ==================================
# EMT Triage Training App - Backend Environment Variables
# ==================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# ----------------------------------
# Server Configuration
# ----------------------------------
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# ----------------------------------
# Database Configuration
# ----------------------------------
# MongoDB connection string
# For local development: mongodb://localhost:27017/emt-training
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/emt-training
MONGODB_URI=mongodb://localhost:27017/emt-training
DATABASE_NAME=emt-training

# ----------------------------------
# Authentication & Security
# ----------------------------------
# JWT secret key - use a long, random string
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=24h

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-characters-long

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000

# ----------------------------------
# AI/ML Service Configuration
# ----------------------------------
# Hugging Face API
HUGGINGFACE_API_KEY=hf_your_hugging_face_api_token_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co

# OpenAI API (fallback for complex scenarios)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id

# Anthropic Claude API (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ----------------------------------
# Email Configuration (for notifications)
# ----------------------------------
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@emt-training-app.com
FROM_NAME=EMT Training App

# ----------------------------------
# File Storage Configuration
# ----------------------------------
# Local file storage path
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=emt-training-assets

# ----------------------------------
# Rate Limiting & Security
# ----------------------------------
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_SECRET=your-session-secret-key-here
SESSION_TIMEOUT=86400000

# ----------------------------------
# Logging Configuration
# ----------------------------------
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ----------------------------------
# Feature Flags
# ----------------------------------
# Enable/disable features during development
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_INSTRUCTOR_DASHBOARD=true
ENABLE_DEBUG_MODE=true

# ----------------------------------
# External APIs & Services
# ----------------------------------
# Analytics service (if using)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error tracking (if using Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------------------------
# Development & Testing
# ----------------------------------
# Test database (separate from development)
TEST_MONGODB_URI=mongodb://localhost:27017/emt-training-test

# Seed data configuration
SEED_ADMIN_EMAIL=admin@emt-training-app.com
SEED_ADMIN_PASSWORD=admin123
SEED_TEST_DATA=true

# ----------------------------------
# Medical Content Configuration
# ----------------------------------
# Medical protocol sources
MEDICAL_PROTOCOL_SOURCE=NREMT
TRIAGE_PROTOCOL=START

# Content update settings
AUTO_UPDATE_SCENARIOS=false
SCENARIO_DIFFICULTY_LEVELS=3

# ----------------------------------
# Performance & Caching
# ----------------------------------
# Redis cache (if using)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API response caching
ENABLE_RESPONSE_CACHING=true
CACHE_DURATION=300

# ----------------------------------
# Deployment Configuration
# ----------------------------------
# Production settings (Railway/Render deployment)
RAILWAY_STATIC_URL=https://your-app.railway.app
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Health check settings
HEALTH_CHECK_INTERVAL=30000

# ----------------------------------
# Team & Project Information
# ----------------------------------
PROJECT_NAME=EMT Triage Training App
PROJECT_VERSION=0.1.0
TEAM_NAME=Your Team Name Here
COURSE=CMPS 4200 AI-Enhanced UI/UX

# ----------------------------------
# Example Values for Quick Setup
# ----------------------------------
# For local development, you can use these example values:

# MongoDB (local):
# MONGODB_URI=mongodb://localhost:27017/emt-training

# JWT Secret (generate a real one):
# JWT_SECRET=emt-training-super-secret-jwt-key-2025-capstone-project

# Hugging Face (sign up at huggingface.co):
# HUGGINGFACE_API_KEY=hf_1234567890abcdefghijklmnopqrstuvwxyz

# OpenAI (sign up at platform.openai.com):
# OPENAI_API_KEY=sk-1234567890abcdefghijklmnopqrstuvwxyzABCDEF

# ----------------------------------
# Security Notes
# ----------------------------------
# 1. Never commit actual .env file to version control
# 2. Use strong, unique keys for production
# 3. Rotate API keys regularly
# 4. Use different keys for development/production
# 5. Keep backup of production environment variables
